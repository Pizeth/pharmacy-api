{
  "compilerOptions": {
    "strict": true,
    "allowJs": true,
    "module": "commonjs",
    // "module": "es2022",
    // "target": "esnext",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "target": "ES2022",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src/**/*",
    "webpack-hmr.config.js",
    "webpack-hmr.config.ts",
    "env.d.ts",
    "prisma/seed.ts",
    "src/modules/prisma/services/prisma.service.ts"
  ]
}
