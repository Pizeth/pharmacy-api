{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "pharmacy-api",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest build --webpack --webpackPath webpack-hmr.config.cjs --watch",
    "db:reset": "prisma migrate reset",
    "db:seed": "tsx prisma/seed.ts --seed",
    "db:seed:dev": "tsx --watch prisma/seed.ts --seed",
    "db:clear": "tsx prisma/seed.ts --clear",
    "db:full-reset": "npm run db:clear && npm run db:reset",
    "build:webpack": "tsc webpack-hmr.config.ts --outDir ./dist",
    "start:dev1": "npm run build:webpack && nest start --webpack --webpackPath ./dist/webpack-hmr.config.js --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts --seed"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.824.0",
    "@aws-sdk/s3-request-presigner": "^3.824.0",
    "@dicebear/collection": "^9.2.3",
    "@dicebear/core": "^9.2.3",
    "@nestjs/axios": "^4.0.0",
    "@nestjs/common": "^11.1.2",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.2",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/platform-express": "^11.1.2",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/throttler": "^6.4.0",
    "@prisma/client": "^6.9.0",
    "axios": "^1.9.0",
    "bcrypt": "^6.0.0",
    "clamscan": "^2.4.0",
    "form-data": "^4.0.2",
    "http-status-codes": "^2.3.0",
    "nanoid": "^5.1.5",
    "nestjs-cls": "^6.0.1",
    "nestjs-i18n": "^10.5.1",
    "nestjs-zod": "^4.3.1",
    "qrcode": "^1.5.4",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "tsx": "^4.19.4",
    "ua-parser-js": "^2.0.3",
    "uuid": "^11.1.0",
    "zod": "^3.25.67",
    "zod-openapi": "^4.2.4"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.28.0",
    "@nestjs/cli": "^11.0.7",
    "@nestjs/schematics": "^11.0.5",
    "@nestjs/testing": "^11.1.2",
    "@swc/cli": "^0.7.7",
    "@swc/core": "^1.11.31",
    "@types/bcrypt": "^5.0.2",
    "@types/clamscan": "^2.4.1",
    "@types/express": "^5.0.2",
    "@types/form-data": "^2.5.2",
    "@types/jest": "^29.5.14",
    "@types/multer": "^1.4.13",
    "@types/node": "^22.15.29",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "@types/webpack-node-externals": "^3.0.4",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.1",
    "globals": "^16.2.0",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "prisma": "^6.9.0",
    "run-script-webpack-plugin": "^0.2.3",
    "source-map-support": "^0.5.21",
    "supertest": "^7.1.1",
    "ts-jest": "^29.3.4",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.33.1",
    "webpack": "^5.99.9",
    "webpack-node-externals": "^3.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
