{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "tsconfig.build.json",
    "assets": [
      { "include": "i18n/**/*", "watchAssets": true },
      { "include": "assets/**/*", "outDir": "dist/", "watchAssets": true }
    ],
    "watchAssets": true
  }
}
